#include <stdio.h>
#include <sys/io.h>
#include <errno.h>
#include "pci.h"
#include <stdlib.h>

char *GetVendorName(int vendorID)
{
	int i;
	for (i = 0; i < PCI_VENTABLE_LEN; i++)
		if (PciVenTable[i].VendorId == vendorID)
			return PciVenTable[i].VendorName;
	return NULL;	
}

char *GetDeviceName(int vendorID, int deviceID)
{
	int i;
	for (i = 0; i < PCI_DEVTABLE_LEN; i++)
		if (PciDevTable[i].VendorId == vendorID && PciDevTable[i].DeviceId == deviceID)
			return PciDevTable[i].DeviceName;	
	
	return NULL;
}


int main(int argc, char **argv)
{
	unsigned long commandReg = 0, dataReg = 0;
	if (iopl(3) )
	{
		printf("I/O Privilege level change error\n Try run under ROOT rights\n");
		return 1;
	}
	
	unsigned short busid, devid;
	
	for (busid = 0; busid <= 0xFF; ++busid)
	{
		for (devid = 0; devid <= 0xFF; ++devid)
		{
			commandReg = (1 << 31) | (busid << 16) | (devid << 11);
			outl(commandReg, 0x0CF8);
			dataReg = inl(0x0CFC);
			
			unsigned short devid = dataReg >> 16;
			if (devid != 0xFFFF)
			{
				printf("Found something at %x.%x\n", busid, devid);
				/*
				unsigned short venid = dataReg & 0xFFFF;
				printf("VendorID:%x\n\n", venid);
				*/
			}
		}
	}
	
	return 0;
}


	
